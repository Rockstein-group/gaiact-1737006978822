      function toggleSidebar() {
        // Get the nav tag and toggle button
        const navHeader = document.querySelector(".nav-header");
        const navButton = document.querySelector(".nav-button");
        const toggleButton = document.querySelector(".toggle-sidebar button");

        if (navHeader && toggleButton) {
          toggleButton.addEventListener("click", () => {
            navHeader.classList.toggle("hidden"); // Toggle the 'hidden' class
          });
        }
        if (navButton && toggleButton) {
          toggleButton.addEventListener("click", () => {
            navButton.classList.toggle("hidden"); // Toggle the 'hidden' class
